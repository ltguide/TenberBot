{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "NLog": {
      "IncludeScopes": true
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "internalLogLevel": "Warn",
    "internalLogFile": "${tempdir}/internal-nlog-TenberBot.txt",
    "extensions": [
      { "assembly": "NLog.Database" },
      { "assembly": "NLog.Extensions.Logging" }
    ],
    "targets": {
      "async": true,
      "logconsole": {
        "type": "ColoredConsole",
        "layout": "${longdate} ${level:uppercase=true:padding=8} ${message} ${exception:format=tostring}",
        "useDefaultRowHighlightingRules": true
      },
      "database": {
        "type": "Database",
        "dbProvider": "Microsoft.Data.SqlClient.SqlConnection, Microsoft.Data.SqlClient",
        "connectionString": "${configsetting:item=app-database}",
        "keepConnection": "true",
        "commandText": "INSERT INTO dbo.ApplicationLogs (Timestamp,LogLevel,Logger,Message,Exception) values (@Timestamp, @LogLevel, @Logger, @Message, @Exception);",
        "parameters": [
          {
            "name": "@Timestamp",
            "layout": "${date:format=o}",
            "dbType": "DbType.DateTime"
          },
          {
            "name": "@LogLevel",
            "layout": "${level:format=Ordinal}"
          },
          {
            "name": "@Logger",
            "layout": "${logger}"
          },
          {
            "name": "@Message",
            "layout": "${message}"
          },
          {
            "name": "@Exception",
            "layout": "${exception:tostring}"
          }
        ]
      }
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "database"
      }
    ]
  }
}
